<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.somesh.somesh_2048.Q4"
    android:background="#89e1ed">

    <TextView
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:text="The device used for measuring altitudes is ?"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <RadioGroup
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup5">

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="altimeter"
            android:id="@+id/radioButton13"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ammeter"
            android:id="@+id/radioButton14"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="audiometer"
            android:id="@+id/radioButton15"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="galvanometer"
            android:id="@+id/radioButton16"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:id="@+id/button41"
        android:layout_below="@+id/radioGroup5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button42"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_alignTop="@+id/button41"
        android:layout_alignRight="@+id/radioGroup5"
        android:layout_alignEnd="@+id/radioGroup5" />
</RelativeLayout>
