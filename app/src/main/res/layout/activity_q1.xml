<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.somesh.somesh_2048.Q1"
    android:background="#89e1ed">

    <RadioGroup
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="HINDI"
            android:id="@+id/radioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Palauan"
            android:id="@+id/radioButton2"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text=" Sindhi"
            android:id="@+id/radioButton3"
            android:checked="false" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Nauruan"
            android:id="@+id/radioButton4"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:text="The language spoken by the people in Pakistan is ?"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button35"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioGroup2"
        android:layout_alignEnd="@+id/radioGroup2"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:id="@+id/button36"
        android:layout_alignTop="@+id/button35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

</RelativeLayout>
